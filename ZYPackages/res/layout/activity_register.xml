<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:minHeight="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/TitleFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用户注册"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginFont"
            android:text="手机号：" />

        <EditText
            android:id="@+id/edit_register_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="请输入11位手机号码"
             >
        </EditText>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(必填)"/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginFont"
            android:text="登录密码：" />

        <EditText
            android:id="@+id/edit_register_upassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:password="true"
            android:hint="请输入登录密码"
             >
        </EditText>
                <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(必填)"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginFont"
            android:text="确认密码：" />

        <EditText
            android:id="@+id/edit_register_enter_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:password="true"
            android:hint="请再次输入您的登录密码"
             >
        </EditText>
                <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(必填)"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginFont"
            android:text="登录名：" />

        <EditText
            android:id="@+id/edit_register_login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:hint="请输入登录名"
             >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginFont"
            android:singleLine="true"
            android:text="真实姓名：" />

        <EditText
            android:id="@+id/edit_register_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:hint="请输入您的真实姓名"
             >
        </EditText>
                <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(可选填)"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginFont"
            android:text="身份证号：" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:id="@+id/edit_register_id"
            android:hint="请输入18位身份证号"
            android:text=""
             >
        </EditText>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(可选填)"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginFont"
            android:text="邮箱：" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:id="@+id/edit_register_email"
            android:hint="请输入邮箱，如12345@qq.com"
             >
        </EditText>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(可选填)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >
    </LinearLayout>

    <Button
        android:id="@+id/button_register_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="注册" />

</LinearLayout>
